<div>
  <%= label_tag :test_image_files, 'Ficheros de imagen' %>
  <div id="image_files">
    <%= render :partial => 'new_image_file' %>
  </div>

  <a href="#" class="button"
    onclick="$.get('/tests/new_image_file', function(data){ $('#image_files').append(data);}); return false">
    <img src="/images/icons/add.png" /> A&ntilde;adir
  </a>
  <br/>
</div>
<br clear="both"/>